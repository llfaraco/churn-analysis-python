   "source": [
    "# üìâ Churn Analysis ‚Äì EDA em Python\n",
    "\n",
    "An√°lise explorat√≥ria de churn com foco em comportamento, risco e padr√µes de cancelamento."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Imports principais e leitura do dataset\n",
    "import pandas as pd\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import seaborn as sns\n",
    "\n",
    "sns.set(style=\"whitegrid\")\n",
    "plt.rcParams['figure.figsize'] = (10, 6)\n",
    "\n",
    "df = pd.read_csv(\"../data/churn_clientes.csv\")\n",
    "df.head()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Estrutura geral do dataset\n",
    "df.info()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Estat√≠sticas descritivas (num√©ricas e categ√≥ricas)\n",
    "df.describe(include=\"all\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# C√°lculo da taxa geral de churn\n",
    "churn_rate = df['churn'].mean()\n",
    "print(f\"Taxa geral de churn: {churn_rate:.2%}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Taxa de churn por segmento\n",
    "segment_churn = df.groupby('segmento')['churn'].mean().sort_values(ascending=False)\n",
    "segment_churn"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Visualiza√ß√£o da taxa de churn por segmento\n",
    "sns.barplot(x=segment_churn.index, y=segment_churn.values)\n",
    "plt.title('Taxa de churn por segmento')\n",
    "plt.ylabel('Taxa de churn')\n",
    "plt.xlabel('Segmento')\n",
    "plt.xticks(rotation=0)\n",
    "plt.tight_layout()\n",
    "plt.show()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Taxa de churn por canal\n",
    "canal_churn = df.groupby('canal')['churn'].mean().sort_values(ascending=False)\n",
    "canal_churn"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Visualiza√ß√£o da taxa de churn por canal\n",
    "sns.barplot(x=canal_churn.index, y=canal_churn.values)\n",
    "plt.title('Taxa de churn por canal')\n",
    "plt.ylabel('Taxa de churn')\n",
    "plt.xlabel('Canal')\n",
    "plt.xticks(rotation=0)\n",
    "plt.tight_layout()\n",
    "plt.show()"
   ]
  },
